= form_for @meeting do |f|
  = f.label :name
  = f.text_field :name
  = f.label :start_at
  .datetime_select
    = f.datetime_select :start_at, default: Time.now
  = f.label :end_at
  .datetime_select
    = f.datetime_select :end_at, default: Time.now + 3.hours
  = f.label :juried
  = f.check_box :juried
  = f.label :accepting
  = f.check_box :accepting, checked: @meeting.new_record? || @meeting.accepting
  = f.text_area :content, rows: 20, class: 'emoji-complete user-complete'
  = f.submit
  = link_to t('button.cancel'), cancel_path
