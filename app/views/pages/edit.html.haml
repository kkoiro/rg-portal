.content
  %h1 Edit #{@page.path}

  = form_for @page, url: update_page_path, method: :patch do |f|
    = f.hidden_field :path
    = f.text_field :title
    = f.text_area :content, rows: 30, class: 'emoji-complete user-complete js-smart-uploader'
    = f.submit 'Save'
    = link_to t('button.cancel'), page_path(@page.path), class: 'action_link'
    = link_to 'Rename page', rename_page_path(@page.path), class: 'action_link'
